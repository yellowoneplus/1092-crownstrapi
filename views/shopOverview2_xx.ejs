<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crown Clothing</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="header">
      <a href="/crown" class="logo-container">
        <img src="/img/crown.svg" />
      </a>
      <div class="options">
        <a href="/shop" class="option">Shop</a>
        <a href="/shop" class="option">Contact</a>
        <a href="/signin" class="option">Sign In</a>
        <div class="cart-icon" onclick="cartToggle()">
          <img class="shopping-icon" src="/img/shopping-bag.svg" alt="" />
        </div>
        <div class="cart-dropdown">
          <div class="cart-items">
            <div class="cart-item">
              <img src="https://i.ibb.co/QdJwgmp/brown-cowboy.png" alt="item" />
              <div class="item-details">
                <span class="name">Brown Cowboy</span>
                <span class="price">4 * $35</span>
              </div>
            </div>
            <div class="cart-item">
              <img
                src="https://i.ibb.co/mJS6vz0/blue-jean-jacket.png"
                alt="item"
              />
              <div class="item-details">
                <span class="name">Blue Jean Jacket</span>
                <span class="price">1 * $90</span>
              </div>
            </div>
            <button class="custom-button">GO TO CHECKOUT</button>
          </div>
        </div>
      </div>
    </div>

    <div class="shop-page">
      <div class="collection-overview">
        <div class="collection-preview">
          <h2 class="title">Hats</h2>
          <div class="preview">
            <% for(let i=0; i< ( count< data.hats.length ? count :
            data.hats.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data.hats[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data.hats[i].name %></span>
                <span class="price"><%= data.hats[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h1 class="title">Jackets</h1>
          <div class="preview">
            <% for(let i=0; i< (count < data.jackets.length ? count :
            data.jackets.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data.jackets[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data.jackets[i].name %></span>
                <span class="price"><%= data.jackets[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Sneakers</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data.sneakers.length ? count :
            data.sneakers.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data.sneakers[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data.sneakers[i].name %></span>
                <span class="price"><%= data.sneakers[i].name %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Womens</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data.womens.length ? count :
            data.womens.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data.womens[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data.womens[i].name %></span>
                <span class="price"><%= data.womens[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
        <div class="collection-preview">
          <h2 class="title">Mens</h2>
          <div class="preview">
            <% for(let i=0; i< (count < data.mens.length ? count :
            data.mens.length ); i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= data.mens[i].local_url %>" />
              <div class="collection-footer">
                <span class="name"><%= data.mens[i].name %></span>
                <span class="price"><%= data.mens[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script>
      function cartToggle() {
        p = document.querySelector(".cart-dropdown");
        p.classList.toggle("show");
      }
    </script>
  </body>
</html>
